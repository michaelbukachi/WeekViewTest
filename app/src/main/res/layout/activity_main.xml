<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:columnGap="4dp"
        app:dayBackgroundColor="@android:color/white"
        app:eventTextColor="@android:color/white"
        app:eventCornerRadius="4dp"
        app:eventMarginVertical="0dp"
        app:headerRowBackgroundColor="@android:color/white"
        app:headerRowPadding="12dp"
        app:hourHeight="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:numberOfVisibleDays="3"
        app:timeColumnBackgroundColor="@android:color/white"
        app:timeColumnPadding="8dp"
        app:timeColumnTextColor="@color/colorPrimaryDark"
        app:timeColumnTextSize="12sp"
        app:todayBackgroundColor="@android:color/darker_gray"
        app:minHour="8"
        app:maxHour="23"
        app:showCompleteDay="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>